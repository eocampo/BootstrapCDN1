@if (Request.IsAuthenticated) {
  using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
    @Html.AntiForgeryToken()
    <ul class="navbar-nav ms-auto">
      <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">@User.Identity.Name<span class="caret"></span></a>
      </li>
      <li class="nav-item">
        <a class="navbar-icon nav-link" href="javascript:document.getElementById('logoutForm').submit()">
          <span class="material-symbols-outlined">
            logout
          </span>
        </a>
      </li>
    </ul>
  }
} else {
  <ul class="navbar-nav ms-auto">
    <li class="nav-item">@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
  </ul>
}
